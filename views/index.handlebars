<h1>Avo App</h1>

<h2>Best deals</h2>

<table style="color: red;">

    {{#each deals}}
    <tr>
        <td>
            {{qty}} for {{price}}
        </td>
    </tr>
    {{/each}}


</table>


<h1>Enter your budget and view deals</h1>




<form action="/" method="POST">

    <div class="buttons">
        <div class="col-xs-2" style=" margin-right: 5px;">
            <input type="text" class="form-control" name="price" id="price" placeholder="my budget">
        </div>

        <button type="submit" class="btn btn-success" id="add" style=" margin-right: 5px;">View</button>

    </div>

</form>


<table style="color: red;">

    {{#each deal}}
    <tr>
        <td>
            {{qty}} for {{price}}
        </td>
    </tr>
    {{/each}}


</table>





<a class= "links"href="/add">Add Deal</a>
<a class="links"href="/viewShops">View Shops & Deals</a>

<a class="links"href="/addShop">Add Shops</a>



